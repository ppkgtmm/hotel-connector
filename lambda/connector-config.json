{
  "name": "hotel-connector",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "plugin.name": "pgoutput",
    "database.hostname": "${DB_HOST}",
    "database.user": "${DBZ_USER}",
    "database.password": "${DBZ_PASSWORD}",
    "database.dbname": "${DB_NAME}",
    "topic.prefix": "${DB_NAME}",
    "snapshot.mode": "when_needed",
    "tasks.max": "1",
    "database.server.id": "1",
    "database.history.internal.kafka.topic": "${DB_NAME}",
    "database.history.internal.kafka.bootstrap.servers": "${KAFKA_BOOTSTRAP_SERVER}",
    "database.history.internal.consumer.security.protocol": "SASL_SSL",
    "database.history.internal.consumer.sasl.mechanism": "AWS_MSK_IAM",
    "database.history.internal.consumer.sasl.jaas.config": "software.amazon.msk.auth.iam.IAMLoginModule required;",
    "database.history.internal.consumer.sasl.client.callback.handler.class": "software.amazon.msk.auth.iam.IAMClientCallbackHandler",
    "database.history.internal.producer.security.protocol": "SASL_SSL",
    "database.history.internal.producer.sasl.mechanism": "AWS_MSK_IAM",
    "database.history.internal.producer.sasl.jaas.config": "software.amazon.msk.auth.iam.IAMLoginModule required;",
    "database.history.internal.producer.sasl.client.callback.handler.class": "software.amazon.msk.auth.iam.IAMClientCallbackHandler"
  }
}